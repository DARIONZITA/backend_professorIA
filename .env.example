# Environment variables for Professor AI - Pedagogical Radar
# Copy this file to .env and fill in the values

# MongoDB connection (required)
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
MONGO_DB_NAME=professorai

# LLM providers (optional - enables advanced features)
# Google Gemini API key (for multimodal OCR and fallback LLM)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest

# Groq API key (preferred LLM provider)
API_GROQ=your_groq_api_key_here
GROQ_MODEL=gemma2-9b-it
API_GROQ_URL=https://api.groq.com/openai/v1/chat/completions

# Remote OCR Space URL (optional - for legacy TrOCR)
SPACE_URL=https://your-space.hf.space

# Grouping cache TTL in seconds (optional)
GROUPING_CACHE_TTL=120